---
import { cities } from '../data/cities';
import { services } from '../data/services';

const currentYear = new Date().getFullYear();
---

<footer class="bg-white mt-20">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Agence V5</h3>
        <p class="text-gray-600 mb-4">
          Votre partenaire en marketing digital au Maroc
        </p>
        <div class="space-y-2">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:+212661196147" class="text-gray-600 hover:text-primary-500">+212 6 61 19 61 47</a>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-gray-600">Technopark Casablanca</span>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Services</h3>
        <div class="space-y-4">
          {services.map(category => (
            <details class="group">
              <summary class="list-none cursor-pointer">
                <div class="flex items-center text-gray-900 font-medium hover:text-primary-500">
                  <svg class="w-4 h-4 mr-2 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                  {category.category}
                </div>
              </summary>
              <div class="mt-2 ml-6 space-y-1">
                {category.subcategories.map(sub => (
                  <a href={`/services/${sub.slug}`} class="block text-sm text-gray-600 hover:text-primary-500">
                    {sub.name}
                  </a>
                ))}
              </div>
            </details>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Villes</h3>
        <div class="space-y-4">
          {cities.map(section => (
            <details class="group">
              <summary class="list-none cursor-pointer">
                <div class="flex items-center text-gray-900 font-medium hover:text-primary-500">
                  <svg class="w-4 h-4 mr-2 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                  {section.section}
                </div>
              </summary>
              <div class="mt-2 ml-6 space-y-1">
                {section.cities.map(city => (
                  <a href={`/${city.slug}/marketing-digital`} class="block text-sm text-gray-600 hover:text-primary-500">
                    {city.name}
                  </a>
                ))}
              </div>
            </details>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Liens Rapides</h3>
        <ul class="space-y-2">
          <li><a href="/contactez-nous" class="text-gray-600 hover:text-primary-500">Nous Contacter</a></li>
          <li><a href="/a-propos" class="text-gray-600 hover:text-primary-500">À Propos</a></li>
          <li><a href="/services" class="text-gray-600 hover:text-primary-500">Tous nos Services</a></li>
          <li><a href="/villes" class="text-gray-600 hover:text-primary-500">Toutes les Villes</a></li>
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-center text-gray-500">© {currentYear} Agence V5. Tous droits réservés.</p>
    </div>
  </div>
</footer>