---
import { services } from '../data/services';
---

<section class="relative py-24 overflow-hidden bg-gradient-to-b from-white via-slate-50/50 to-white">
  <!-- Animated background patterns -->
  <div class="absolute inset-0 z-0">
    <div class="absolute top-0 left-1/2 w-[500px] h-[500px] bg-primary-500/10 rounded-full mix-blend-multiply filter blur-[80px] animate-slow-drift"></div>
    <div class="absolute bottom-0 right-1/2 w-[600px] h-[600px] bg-indigo-500/10 rounded-full mix-blend-multiply filter blur-[80px] animate-slow-drift-reverse"></div>
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-20 dark:opacity-20">
      <div class="blur-[106px] h-56 bg-gradient-to-br from-primary-600 to-purple-400 dark:from-blue-700"></div>
      <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-primary-300 dark:to-indigo-600"></div>
    </div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-8">
        Nos Services
        <span class="relative whitespace-nowrap">
          <svg aria-hidden="true" viewBox="0 0 418 42" class="absolute left-0 top-2/3 h-[0.58em] w-full fill-primary-300/70" preserveAspectRatio="none">
            <path d="M203.371.916c-26.013-2.078-76.686 1.963-124.73 9.946L67.3 12.749C35.421 18.062 18.2 21.766 6.004 25.934 1.244 27.561.828 27.778.874 28.61c.07 1.214.828 1.121 9.595-1.176 9.072-2.377 17.15-3.92 39.246-7.496C123.565 7.986 157.869 4.492 195.942 5.046c7.461.108 19.25 1.696 19.17 2.582-.107 1.183-7.874 4.31-25.75 10.366-21.992 7.45-35.43 12.534-36.701 13.884-2.173 2.308-.202 4.407 4.442 4.734 2.654.187 3.263.157 15.593-.78 35.401-2.686 57.944-3.488 88.365-3.143 46.327.526 75.721 2.23 130.788 7.584 19.787 1.924 20.814 1.98 24.557 1.332l.066-.011c1.201-.203 1.53-1.825.399-2.335-2.911-1.31-4.893-1.604-22.048-3.261-57.509-5.556-87.871-7.36-132.059-7.842-23.239-.254-33.617-.116-50.627.674-11.629.54-42.371 2.494-46.696 2.967-2.359.259 8.133-3.625 26.504-9.81 23.239-7.825 27.934-10.149 28.304-14.005.417-4.348-3.529-6-16.878-7.066Z"></path>
          </svg>
          <span class="relative text-primary-600">Marketing Digital</span>
        </span>
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl text-center leading-relaxed">
        Découvrez notre gamme complète de services marketing digital pour propulser votre entreprise vers de nouveaux sommets.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(category => (
        <div class="group relative">
          <!-- Hover effect background -->
          <div class="absolute -inset-[2px] bg-gradient-to-r from-primary-600 via-primary-500 to-indigo-500 rounded-2xl opacity-0 group-hover:opacity-100 blur-md transition-all duration-500 group-hover:duration-200"></div>
          
          <div class="relative h-full bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-gray-100/80 backdrop-blur-xl">
            <!-- Category header with icon -->
            <div class="flex items-start space-x-4 mb-6">
              <div class="w-12 h-12 rounded-lg bg-primary-500/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">
                <a href={`/services/${category.slug}`} class="hover:text-primary-600 transition-colors">
                  {category.category}
                </a>
              </h3>
            </div>
            
            <!-- Subcategories -->
            <ul class="space-y-6">
              {category.subcategories.map(sub => (
                <li class="relative">
                  <h4 class="font-semibold text-gray-900 mb-3">
                    <a href={`/services/${sub.slug}`} class="hover:text-primary-600 transition-colors">
                      {sub.name}
                    </a>
                  </h4>
                  <ul class="space-y-2 relative before:absolute before:left-0 before:top-1 before:bottom-1 before:w-[2px] before:bg-gradient-to-b before:from-primary-500/40 before:to-primary-500/0">
                    {sub.services.map(service => (
                      <li class="relative pl-6">
                        <div class="absolute left-0 top-1/2 -translate-y-1/2 w-1.5 h-1.5 rounded-full bg-primary-500/40"></div>
                        <a 
                          href={`/services/${service.slug}`} 
                          class="text-gray-600 hover:text-primary-600 transition-colors flex items-center group/link"
                        >
                          <span class="absolute left-6 opacity-0 group-hover/link:opacity-100 group-hover/link:translate-x-1 transition-all">→</span>
                          <span class="group-hover/link:translate-x-2 transition-transform">
                            {service.name}
                          </span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes slow-drift {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(1%, 2%) rotate(1deg); }
    75% { transform: translate(-1%, -2%) rotate(-1deg); }
  }
  
  .animate-slow-drift {
    animation: slow-drift 20s ease-in-out infinite;
  }
  
  .animate-slow-drift-reverse {
    animation: slow-drift 25s ease-in-out infinite reverse;
  }
</style>