---
import { services } from '../data/services';
---

<section class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-16 text-center">
      Nos Services Marketing Digital
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(category => (
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-primary-600/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 border border-gray-100/50">
            <h3 class="text-xl font-semibold text-primary-500 mb-6">
              <a href={`/services/${category.slug}`} class="hover:text-primary-600">
                {category.category}
              </a>
            </h3>
            <ul class="space-y-4">
              {category.subcategories.map(sub => (
                <li>
                  <h4 class="font-medium text-gray-900 mb-2">
                    <a href={`/services/${sub.slug}`} class="hover:text-primary-500">
                      {sub.name}
                    </a>
                  </h4>
                  <ul class="ml-4 space-y-2">
                    {sub.services.map(service => (
                      <li>
                        <a 
                          href={`/services/${service.slug}`} 
                          class="text-gray-600 hover:text-primary-500 flex items-center group/link"
                        >
                          <span class="mr-2 opacity-0 group-hover/link:opacity-100 transition-opacity">â†’</span>
                          {service.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>