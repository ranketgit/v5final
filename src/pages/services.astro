---
import Layout from '../layouts/Layout.astro';
import { services } from '../data/services';

const title = "Tous Nos Services de Marketing Digital - Agence V5";
const description = "Découvrez notre gamme complète de services marketing digital au Maroc. SEO, réseaux sociaux, publicité en ligne et plus encore pour votre succès digital.";
---

<Layout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">
        Nos Services Marketing Digital
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Des solutions complètes et personnalisées pour votre transformation digitale.
        De la stratégie à l'exécution, nous vous accompagnons à chaque étape.
      </p>
    </div>

    <div class="space-y-16">
      {services.map(category => (
        <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">{category.category}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {category.subcategories.map(subcategory => (
              <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <h3 class="text-xl font-semibold text-primary-500 mb-4">
                  <a href={`/services/${subcategory.slug}`} class="hover:text-primary-600">
                    {subcategory.name}
                  </a>
                </h3>
                <ul class="space-y-3">
                  {subcategory.services.map(service => (
                    <li>
                      <a 
                        href={`/services/${service.slug}`}
                        class="text-gray-600 hover:text-primary-500 flex items-center group"
                      >
                        <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                        {service.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        Prêt à Démarrer Votre Projet ?
      </h2>
      <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
        <a 
          href="/contactez-nous" 
          class="btn-primary"
        >
          Demander un Devis
        </a>
        <a 
          href="tel:+212661196147" 
          class="inline-flex items-center px-6 py-3 border border-primary-500 text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          +212 6 61 19 61 47
        </a>
      </div>
    </div>
  </div>
</Layout>