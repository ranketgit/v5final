---
import Layout from '../layouts/Layout.astro';
import { cities } from '../data/cities';

const title = "Marketing Digital dans Toutes les Villes du Maroc - Agence V5";
const description = "Découvrez nos services de marketing digital dans toutes les villes du Maroc. Solutions locales adaptées pour votre entreprise par Agence V5.";
---

<Layout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-6">
        Nos Services Dans Tout le Maroc
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Agence V5 vous accompagne dans votre transformation digitale partout au Maroc. 
        Découvrez nos services adaptés aux spécificités de chaque région.
      </p>
    </div>

    {cities.map(section => (
      <div class="mb-16 last:mb-0">
        <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">{section.section}</h2>
          <p class="text-gray-600 mb-8">
            Des solutions marketing digital adaptées aux spécificités et aux opportunités de chaque ville.
          </p>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {section.cities.map(city => (
              <a
                href={`/${city.slug}/marketing-digital`}
                class="group relative"
              >
                <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-primary-600/20 rounded-xl blur-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
                <div class="relative p-6 text-center rounded-xl bg-white shadow-md group-hover:shadow-xl transition-all duration-300">
                  <span class="text-gray-800 group-hover:text-primary-500 font-medium transition-colors">{city.name}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    ))}

    <div class="mt-16 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        Besoin d'un Accompagnement Digital ?
      </h2>
      <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
        <a 
          href="/contactez-nous" 
          class="btn-primary"
        >
          Contactez-nous
        </a>
        <a 
          href="tel:+212661196147" 
          class="inline-flex items-center px-6 py-3 border border-primary-500 text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          +212 6 61 19 61 47
        </a>
      </div>
    </div>
  </div>
</Layout>